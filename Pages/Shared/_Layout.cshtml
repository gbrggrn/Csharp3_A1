<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Csharp3_A1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Csharp3_A1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Header -->
        <nav class="navbar navbar-light bg-white fs-6">
            <div class="container d-flex align-items-center">

                <!-- Navbar title -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Hospital Management System</a>

                <!-- Center: Search -->
                <form class="d-flex mx-auto">
                    <input class="form-control me-2" type="search" placeholder="Search" />
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>

                <!-- Right: Language, login, staff -->
                <div class="d-flex">
                    <!-- Language -->
                    <select class="form-select me-2" aria-label="Select language">
                        <option selected>English</option>
                        <option value="1">Swedish</option>
                    </select>
                    <!-- Login -->
                    <button class="btn btn-outline-secondary me-2">Login</button>
                    <!-- Staff -->
                    <button class="btn btn-outline-success">Staff</button>
                </div>
            </div>
        </nav>
        
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-light bg-info bg-opacity-25 fs-6 border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Burger if small window -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                <!-- Burger target / menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav justify-content-center w-100">
                        <li class="nav-item"><a class="nav-link fs-6" href="#">Life & Health</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Child & Pregnant</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Diseases & Ailments</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Accidents & Injuries</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Examination & Treatment</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Csharp3_A1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>