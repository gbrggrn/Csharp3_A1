<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Csharp3_A1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Csharp3_A1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Header -->
        <nav class="navbar navbar-light bg-white fs-6">
            <div class="container d-flex align-items-center flex-nowrap">
                
                <!-- Logo -->
                <img src="~/images/logos/hospital_logo.jpg" 
                     class="img-fluid rounded me-3"
                     alt="Hospital logo"
                     style="width: 50px; height: auto"/>

                <!-- Top Header title -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Hospital Management System</a>

                <!-- Center: Search -->
                <form class="d-flex mx-auto flex-nowrap">
                    <input class="form-control me-2" type="search" placeholder="Search" />
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>

                <!-- Right: Language, login, staff -->
                <div class="d-flex ms-auto flex-nowrap">
                    <!-- Language -->
                    <select class="form-select me-2" aria-label="Select language">
                        <option selected>English</option>
                        <option value="1">Swedish</option>
                    </select>
                    <!-- Login -->
                    <a asp-page="/Patient/PatientPortal" class="btn btn-outline-secondary me-2" aria-label="Patient login">Login</a>
                    <!-- Staff -->
                    <a asp-page="/Staff/StaffDashboard" class="btn btn-outline-success" aria-label="Staff login">Staff</a>
                </div>
            </div>
        </nav>
        
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-info bg-opacity-25 fs-6 border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Burger setup if small window -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                <!-- Burger target / menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav justify-content-center w-100">

                        <!-- Life & Health nested dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="lifeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Life & Health</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Menu/LifeHealth/Exercise">Exercise</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/LifeHealth/Nutrition">Nutrition</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/LifeHealth/Wellness">Wellness</a></li>
                            </ul>
                        </li>

                        <!-- Child & Pregnant nested dropdown-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="childPregDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Child & Pregnant</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Menu/ChildPregnant/Child">Child</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/ChildPregnant/Pregnant">Pregnant</a></li>
                            </ul>
                        </li>

                        <!-- Diseases & Ailments nested dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="disAilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Diseases & Ailments</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Menu/DiseasesAilments/Diseases">Diseases</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/DiseasesAilments/Ailments">Ailments</a></li>
                            </ul>
                        </li>

                        <!-- Accidents & Injuries nested dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accInjDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Accidents & Injuries</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Menu/AccidentsInjuries/Accidents">Accidents</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/AccidentsInjuries/Injuries">Injuries</a></li>
                            </ul>
                        </li>

                        <!-- Examination & Treatment nested dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="exaTreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Examination & Treatment</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Menu/ExaminationTreatment/Examination">Examination</a></li>
                                <li><a class="dropdown-item" asp-page="/Menu/ExaminationTreatment/Treatment">Treatment</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            <div class="container mt-2">
                <div class="row">

                    <!-- Content -->
                    <div class="col below-header-wrapper">
                        <div class="content-wrapper">
                            @RenderBody()
                        </div>
                    </div>

                    <!-- News -->
                    <div class="col-2">
                        <div class="news-section p-2 bg-info bg-opacity-25 border rounded">
                            <h4>News updates</h4>

                            <!-- News card 1 -->
                            <div class="card mb-2 bg-opacity-25">
                                <img src="~/images/news/news_hospital_img1.jpg" class="card-img-top img-fluid opacity-75" />
                                <div class="card-body">
                                    <h6>Rabies finally cured</h6>
                                    <p>A patient has, for the first time, made a full recovery from rabies infection</p>
                                </div>
                            </div>

                            <!-- News card 2 -->
                            <div class="card mb-2 bg-opacity-25">
                                <img src="~/images/news/news_hospital_img2.jpg" class="card-img-top img-fluid opacity-75" />
                                <div class="card-body">
                                    <h6>Screen induced sadness prevalent among teachers</h6>
                                    <p>Universities need to find more free time for teachers research finds</p>
                                </div>
                            </div>

                            <!-- News card 3 -->
                            <div class="card mb-2 bg-opacity-25">
                                <img src="~/images/news/news_hospital_img3.jpg" class="card-img-top img-fluid opacity-75" />
                                <div class="card-body">
                                    <h6>New fake it until you make it-program successful in recruiting new doctors</h6>
                                    <p>Who needs education anyway?</p>
                                </div>
                            </div>

                            <!-- News card 4 -->
                            <div class="card mb-2 bg-opacity-25">
                                <img src="~/images/news/news_hospital_img4.jpg" class="card-img-top img-fluid opacity-75" />
                                <div class="card-body">
                                    <h6>Involountary handclapping connected to chronic fatigue</h6>
                                    <p>Some people keep clapping their hands - and it is making them tired</p>
                                </div>
                            </div>

                            <!-- News card 5 -->
                            <div class="card mb-2 bg-opacity-25" alt="News 5">
                                <img src="~/images/news/news_hospital_img5.jpg" class="card-img-top img-fluid opacity-75" />
                                <div class="card-body">
                                    <h6>Handsome doctors found to cure patients faster</h6>
                                    <p>Good news for patients - more handsome doctors will be selected through the fake it until you make it-program</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Csharp3_A1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>