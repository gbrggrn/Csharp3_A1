@page
@model Csharp3_A1.Pages.Staff.StaffDashboardModel
@{
	ViewData["Title"] = "Staff Dashboard";
}

<ul ul class="nav nav-tabs">
	<li class="nav-item">
		<a class="nav-link active" data-bs-toggle="tab" href="#tab1">Dashboard</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" data-bs-toggle="tab" href="#tab2">Patients</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" data-bs-toggle="tab" href="#tab3">Appointments</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" data-bs-toggle="tab" href="#tab4">Reports</a>
	</li>
</ul>

<div class="tab-content mt-3">
	<div class="tab-pane fade show active" id="tab1">
		<!-- Dashboard content-->
		<h2>Dashboard Overview</h2>

		<!-- Row 1 * 3 cards-->
		<div class="row g-4">
			<!-- Card 1 -->
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<h5 class="card-title">Total Patients</h5>
						<h2 class="card-text">128</h2>
					</div>
				</div>
			</div>

			<!-- Card 2 -->
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<h5 class="card-title">Today's Appointments</h5>
						<h2 class="card-text">24</h2>
					</div>
				</div>
			</div>

			<!-- Card 3 -->
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<h5 class="card-title">Active Alerts</h5>
						<ul>
							<li>High-fever in Room 305</li>
							<li>Low stock: Amlodipine</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

	</div>
	<div class="tab-pane" id="tab2">
		<!-- Patients content -->
	</div>
	<div class="tab-pane" id="tab3">
		<!-- Appointments content -->
	</div>
	<div class="tab-pane" id="tab4">
		<!-- Reports content -->
	</div>
</div>